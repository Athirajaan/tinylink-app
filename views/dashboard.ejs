
<main class="pt-2">

  <!-- Hero / URL Shortening Section -->
  <section class="bg-gradient-to-b from-slate-900 to-slate-950 py-16 px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 text-slate-100">Shorten Your Links</h1>
      <p class="text-slate-400 mb-12 text-lg">Create short, memorable links in seconds. Perfect for sharing, tracking, and managing your URLs.</p>

      <!-- URL Shortening Form -->
      <div class="bg-slate-800 rounded-xl p-8 border border-slate-700 shadow-2xl max-w-4xl mx-auto mb-16">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
          <div class="md:col-span-2">
            <label class="block text-sm font-semibold text-slate-300 mb-2">Your URL</label>
            <input type="url" id="originalUrl" placeholder="https://example.com/very/long/url"
              class="w-full px-4 py-3 bg-slate-900 border border-slate-700 rounded-lg text-slate-100 placeholder-slate-500 focus:border-purple-500">
          </div>
          <div>
            <label class="block text-sm font-semibold text-slate-300 mb-2">Custom Code (optional)</label>
            <input type="text" id="customCode" placeholder="mylink"
              class="w-full px-4 py-3 bg-slate-900 border border-slate-700 rounded-lg text-slate-100 placeholder-slate-500 focus:border-purple-500">
          </div>
        </div>
        <button onclick="shortenLink()"
          class="w-full bg-gradient-to-r from-purple-600 to-purple-700 hover:from-purple-700 hover:to-purple-800 text-white font-bold py-3 rounded-lg shadow-lg">
          Generate Link
        </button>
        <div id="createMessage" class="mt-4 text-center"></div>
      </div>
    </div>
  </section>

  <!-- Previous Links Section -->
  <section id="links" class="py-16 px-4 bg-slate-950">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl font-bold mb-8 text-slate-100 text-center">Your Shortened Links</h2>
      <div id="linksList" class="grid gap-4">
        <div class="text-center py-12 text-slate-400">
          <p class="text-lg">No links yet. Create your first shortened link above!</p>
        </div>
      </div>
    </div>
  </section>
  <!-- Toast Notification -->
<!-- Centered Toast with Blur Background -->
<div id="toast" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-30 backdrop-blur-sm hidden z-50">
  <div class="bg-gray-800 text-white px-6 py-4 rounded-lg shadow-lg flex items-center gap-4">
    <span id="toastMessage">Are you sure you want to delete this link?</span>
    <button id="toastCancel" class="px-3 py-1 bg-gray-600 rounded hover:bg-gray-700 text-sm">Cancel</button>
    <button id="toastConfirm" class="px-3 py-1 bg-red-600 rounded hover:bg-red-700 text-sm">Delete</button>
  </div>
</div>




</main>

<script>
  let links = [];

  // Load all links
  async function loadLinks() {
    try {
      const response = await fetch('/api/links');
      links = await response.json();
      renderLinks();
    } catch (error) {
      document.getElementById('linksList').innerHTML =
        '<div class="text-center py-12 text-red-600">Error loading links</div>';
    }
  }

  // Render links
function renderLinks() {
  const container = document.getElementById('linksList');

  if (links.length === 0) {
    container.innerHTML = `<div class="text-center py-12 text-slate-400">
      <p class="text-lg">No links yet. Create your first shortened link above!</p>
    </div>`;
    return;
  }

  container.innerHTML = links.map(link => `
    <div class="link-item bg-slate-800 rounded-lg p-4 border border-slate-700 flex flex-col md:flex-row md:items-center md:justify-between gap-4 hover:border-purple-500 transition cursor-pointer"
         onclick="window.location.href='/code/${link.code}'">
      <div class="flex-1">
        <p class="text-sm text-slate-400 mb-1">Original URL</p>
        <p class="text-slate-100 break-all">${link.targetUrl}</p>
        <p class="text-xs text-slate-500 mt-2">Clicks: ${link.totalClicks} | Created: ${new Date(link.createdAt).toLocaleDateString()}</p>
      </div>
      <div class="flex flex-col sm:flex-row gap-2 items-stretch sm:items-center mt-2 md:mt-0">
        <div class="bg-slate-900 rounded px-3 py-2">
          <p class="text-sm text-slate-400">Short Link</p>
          <p class="text-purple-400 font-mono font-semibold">${link.code}</p>
        </div>
        <button onclick="event.stopPropagation(); copyToClipboard('${link.code}', this)"
          class="bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded font-semibold transition whitespace-nowrap">
          Copy
        </button>
        <button onclick="event.stopPropagation(); deleteLink('${link.code}')"
          class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded font-semibold transition whitespace-nowrap">
          Delete
        </button>
      </div>
    </div>
  `).join('');
}

  // Shorten link
  async function shortenLink() {
    const originalUrl = document.getElementById('originalUrl').value.trim();
    const customCode = document.getElementById('customCode').value.trim();
    const msgDiv = document.getElementById('createMessage');

    if (!originalUrl) {
      msgDiv.innerHTML = `<div class="text-red-600">Please enter a URL</div>`;
      return;
    }

    try { new URL(originalUrl); } catch { 
      msgDiv.innerHTML = `<div class="text-red-600">Please enter a valid URL</div>`; 
      return; 
    }

    try {
      const response = await fetch('/api/links', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ code: customCode, targetUrl: originalUrl })
      });

      const data = await response.json();

      if (response.ok) {
        msgDiv.innerHTML = `<div class="text-green-600">Link created! <a href="/code/${data.code}" class="underline">View</a></div>`;
        document.getElementById('originalUrl').value = '';
        document.getElementById('customCode').value = '';
        loadLinks();
      } else {
        msgDiv.innerHTML = `<div class="text-red-600">${data.error}</div>`;
      }
    } catch (error) {
      msgDiv.innerHTML = `<div class="text-red-600">Error creating link</div>`;
    }
  }

  // Copy to clipboard
  function copyToClipboard(code, button) {
    navigator.clipboard.writeText(`${window.location.origin}/code/${code}`).then(() => {
      const originalText = button.textContent;
      button.textContent = 'âœ“ Copied!';
      setTimeout(() => { button.textContent = originalText; }, 2000);
    });
  }

  // Delete link
 let deleteTargetCode = null;
const toast = document.getElementById('toast');
const toastCancel = document.getElementById('toastCancel');
const toastConfirm = document.getElementById('toastConfirm');

function deleteLink(code) {
  deleteTargetCode = code;
  toast.classList.remove('hidden');
}

// Cancel button
toastCancel.addEventListener('click', () => {
  deleteTargetCode = null;
  toast.classList.add('hidden');
});

// Confirm delete
toastConfirm.addEventListener('click', async () => {
  if (!deleteTargetCode) return;
  try {
    const response = await fetch(`/api/links/${deleteTargetCode}`, { method: 'DELETE' });
    if (!response.ok) alert('Error deleting link');
    deleteTargetCode = null;
    toast.classList.add('hidden');
    loadLinks();
  } catch (error) {
    alert('Error deleting link');
  }
});


  // Initial load
  loadLinks();
</script>

